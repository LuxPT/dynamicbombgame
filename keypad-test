
#include <Keypad.h>
#include <Tone.h>
int piezo=8;
char* password ; 
int position = 0;
const byte ROWS = 4;
const byte COLS = 4;

char keys[ROWS][COLS] = {
{'1','2','3','A'},
{'4','5','6','B'},
{'7','8','9','C'},
{'*','0','#','D'}
};

byte rowPins[ROWS] = { 3,4,5,6 };
byte colPins[COLS] = { 8,9,10,11 };
Keypad keypad = Keypad( makeKeymap(keys), rowPins, colPins, ROWS, COLS );

int Redled = 13;
int Greenled = 12;
int led1=9;
int led2=10;
int led3=11;


void setup()
{
  Serial.begin(9600);
  pinMode(13, OUTPUT);
  pinMode(12, OUTPUT);
  pinMode(11, OUTPUT);
  pinMode(10, OUTPUT);
  pinMode(9, OUTPUT);
  pinMode(8, OUTPUT);
  
noTone(piezo); 
digitalWrite(Redled, HIGH);
digitalWrite(Greenled, LOW);

digitalwrite(led1,0);
digitalwrite(led2,0);
digitalwrite(led3,0);

sequencia=random(6);
int conta=0;

if(sequencia=0)
{
  password = "F5678";
 digitalwrite(led1,1);
 digitalwrite(led2,0);
 digitalwrite(led3,1);
}

if(sequencia=1)
{
password = "50D23"; 
 digitalwrite(led1,1);
 digitalwrite(led2,1);
 digitalwrite(led3,0);
}

if(sequencia=2)
{ 
  password = "93524"; 
digitalwrite(led1,0);
digitalwrite(led2,0);
digitalwrite(led3,1);

}
if(sequencia=3)
 {
  password = "314A0";
 digitalwrite(led1,0);
 digitalwrite(led2,1);
 digitalwrite(led3,1);
} 


if(sequencia=4)
{
  password = "0B2CD";
 digitalwrite(led1,1);
 digitalwrite(led2,1);
 digitalwrite(led3,1);
 //print lcd ยง
}


if(sequencia=5)
{
  password = "2B699";
 digitalwrite(led1,1);
 digitalwrite(led2,1);
 digitalwrite(led3,1);
 //print lcd *
}

}




void loop()
{
  
char key = keypad.getKey();

if (key == '*' || key == '#' || key!=password[position])
{
position = 0;
digitalWrite(Redled, HIGH);
digitalWrite(Greenled, LOW);
delay(400);
digitalWrite(Redled, LOW);

digitalwrite(led1,1);
digitalwrite(led2,1);
digitalwrite(led3,1);
delay(500);
tone(piezo, 280, 500);
digitalwrite(led1,0);
digitalwrite(led2,0);
digitalwrite(led3,0);
 
digitalWrite(Redled, HIGH);
digitalWrite(Greenled, LOW);

 Serial.println(position); Serial.print("ERROR!!");
 conta++;
 
 if(conta==4)
 {
  tempo=tempo-30;
  tone(piezo, 280, 500);
  delay(300);
  tonepiezo, 280, 500);
  conta=0;
 }
 
}

if (key == password[position])
{
position ++;
  Serial.println(key);
  tone(piezo, 980, 500);
  digitalWrite(Redled, LOW);
  digitalWrite(Greenled, HIGH);
 delay(400);
  digitalWrite(Greenled, LOW);
}

if (position == 5)
{
digitalWrite(Redled, LOW);
digitalWrite(Greenled, HIGH);
tone(piezo, 980, 500);

digitalwrite(led1,0);
digitalwrite(led2,0);
digitalwrite(led3,0);
delay(300);

digitalwrite(led1,1);
digitalwrite(led2,0);
digitalwrite(led3,0);
delay(300);

digitalwrite(led1,0);
digitalwrite(led2,1);
digitalwrite(led3,0);
delay(300);

digitalwrite(led1,0);
digitalwrite(led2,0);
digitalwrite(led3,1);
delay(300);

digitalwrite(led1,0);
digitalwrite(led2,1);
digitalwrite(led3,0);
delay(300);

digitalwrite(led1,1);
digitalwrite(led2,0);
digitalwrite(led3,0);
delay(300);

digitalwrite(led1,0);
digitalwrite(led2,0);
digitalwrite(led3,0);
delay(300);

Serial.print("BOMB HAS BEEN DEFUSED");

}
delay(100);
}

