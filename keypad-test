
#include <Keypad.h>
char* password ; 
int
int position = 0;
const byte ROWS = 4;
const byte COLS = 4;
char keys[ROWS][COLS] = {
{'1','2','3','A'},
{'4','5','6','B'},
{'7','8','9','C'},
{'*','0','#','D'}
};

byte rowPins[ROWS] = { 3,4,5,6 };
byte colPins[COLS] = { 8,9,10,11 };
Keypad keypad = Keypad( makeKeymap(keys), rowPins, colPins, ROWS, COLS );
int Redled = 13;
int Greenled = 12;

void setup()
{
  Serial.begin(9600);
  pinMode(13, OUTPUT);
  pinMode(12, OUTPUT);

digitalWrite(Redled, HIGH);
digitalWrite(Greenled, LOW);
simbolo=random(4);
int conta=0;
if(simbolo=0)
{
  password = "25678"; 
 Serial.print("ยฃ"); 
}
if(simbolo=1)
{ password = "50123"; 
Serial.print("ยง"); 
}
if(simbolo=2)
{ 
  password = "93524"; 
Serial.print("*"); 
}
if(simbolo=3)
 {
  password = "21470";
  Serial.print("#");
} 
}




void loop()
{
  
char key = keypad.getKey();

if (key == '*' || key == '#' || key!=password[position])
{
position = 0;
digitalWrite(Redled, HIGH);
digitalWrite(Greenled, LOW);

 Serial.println(position); Serial.print("ERROR!!");
 conta++;
 if(conta==3)
 {
  tempo=tempo-30;
  conta=0;
 }
}

if (key == password[position])
{
position ++;
  Serial.println(key);
}

if (position == 5)
{
digitalWrite(Redled, LOW);
digitalWrite(Greenled, HIGH);
Serial.print("BOMB DEFUSED");
}
delay(100);
}

